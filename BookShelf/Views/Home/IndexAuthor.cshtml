@model IEnumerable<BookShelf.Models.Author>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ int number = 1;}
<div>
    <h3>Authors</h3>
    <table>
        <tr>
            <td><p>№</p></td>
            <td><p>Name</p></td>
            <td><p>Number of books</p></td>
        </tr>
        @foreach (var a in Model)
        {
            <tr>
                <td><p>@(number++) </p></td>
                <td><p><a href="/Home/ViewAuthor/@a.AuthorId">@a.AuthorName</a></p></td>
                <td><p>@a.Books.Count() </p></td>
            </tr>
        }
    </table>

</div>